{% extends "base.twig" %}
{% block main %}
    {% if userRole == "User" %}
        <div class="container mt-4">
            <div class="row text-center">
                <div class="col mb-3">
                    <div class="row">
                        <div class="col">
                            <a href="{{ route("mylists") }}" class="btn btn-dark btn-lg mt-4 w-50">My Lists</a>
                        </div>
                        <div class="col">
                            <a href="{{ route("newlist") }}" class="btn btn-dark btn-lg mt-4 w-50">New List</a>
                        </div>
                    </div>

                    <a href="{{ route("artists") }}" class="btn btn-dark btn-lg mt-4 w-50">Show Artists</a>
                    <a href="{{ route("lists") }}" class="btn btn-dark btn-lg mt-4 w-50">Show Lists</a>
                    <a href="{{ route("albums") }}" class="btn btn-dark btn-lg mt-4 w-50">Show Albums</a>
                    <a href="{{ route("songs") }}" class="btn btn-dark btn-lg mt-4 w-50">Show Songs</a>
                </div>
            </div>
        </div>
    {% elseif userRole == "Artist" %}
        <div class="container mt-4">
            <div class="row text-center">
                <div class="col mb-3">
                    <div class="row justify-content-center">
                        <div class="col-6">
                            <a href="{{ route("mysongs") }}" class="btn btn-dark btn-lg mt-4 w-75">My Songs</a>
                            <a href="{{ route("myalbums") }}" class="btn btn-dark btn-lg mt-4 w-75">My Albums</a>
                        </div>
                        <div class="col-6">
                            <a href="{{ route("newsong") }}" class="btn btn-dark btn-lg mt-4 w-75">New Song</a>
                            <a href="{{ route("newalbum") }}" class="btn btn-dark btn-lg mt-4 w-75">New Album</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% elseif userRole == "Admin" %}
        <div class="container mt-4">
            <div class="row text-center">
                <div class="col mb-3">
                    <div class="row justify-content-center">
                        <div class="col-8">
                            <a href="{{ route("manageusers") }}" class="btn btn-dark btn-lg mt-4 w-75">Manage Users</a>
                            <a href="{{ route("newadmin") }}" class="btn btn-dark btn-lg mt-4 w-75">Create an admin</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container mt-4">
            <div class="row text-center">
                <div class="col mb-3">
                    <div class="row">
                        <div class="col">
                            <a href="{{ route("register") }}" class="btn btn-info btn-lg mt-4 w-50">Register</a>
                        </div>
                        <div class="col">
                            <a href="{{ route("login") }}" class="btn btn-success btn-lg mt-4 w-50">Login</a>
                        </div>
                    </div>


                        <a href="{{ route("artists") }}" class="btn btn-dark btn-lg mt-4 w-50">Show Artists</a>
                        <a href="{{ route("lists") }}" class="btn btn-dark btn-lg mt-4 w-50">Show Lists</a>
                        <a href="{{ route("albums") }}" class="btn btn-dark btn-lg mt-4 w-50">Show Albums</a>
                        <a href="{{ route("songs") }}" class="btn btn-dark btn-lg mt-4 w-50">Show Songs</a>
                    </div>
                </div>
            </div>
    {% endif %}
{% endblock %}