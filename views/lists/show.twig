{% extends "base.twig" %}
{% block main %}
    {% if songsInList is empty %}
        <div class="container mt-4">
            <div class="row text-center">
                <div class="col mb-3">
                    <h1> --- <strong>{{ listName }}</strong> songs --- </h1>
                    <p class='mt-4'>There are no songs in this list yet</p>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container mt-4">
            <div class="row text-center">
                <div class="col mb-3">
                    <h1> --- <strong>{{ listName }}</strong> songs --- </h1>
                    {% if userRole == 'user' %}
                        {% for song in songsInList %}
                            {{ song.songFormatAdd() }}
                        {% endfor %}
                    {% else %}
                        {% for song in songsInList %}
                            {{ song.songFormat() }}
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}