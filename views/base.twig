<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Music DBüéµ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="../styles.css" />
</head>
<body>
<a href="{{ route('home') }}" class="floating-home-btn">üè†</a>
<header>
    <div class="row w-100 text-center align-items-center">
        <div class="col-3">
            <p class="disk">üíø</p>
        </div>
        <div class="col-6">
            <h1>Welcome to Music DB</h1>
        </div>
        <div class="col-3">
            <div class="row">
                <div class="col-8">
                    <p class="mb-0 me-3">User:
                        <span>
                            {{ userName ?? "None" }}
                        </span>
                    </p>
                    <p class="mb-0 me-3">Role:
                        <span>
                            {{ userRole ?? "Guest" }}
                        </span>
                    </p>
                    <p>Last Action:
                        <span>
                            {{ last_action ?? "No actions yet." }}
                        </span>
                    </p>
                </div>
                <div class="col-4">
                    {%  if active() %}
                        <a href="{{ route('logout') }}" class="btn btn-danger">Log Out</a>
                    {% else %}
                        <a href="{{ route('login') }}" class="btn btn-success">Log In</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</header>
<main class="d-flex justify-content-center">
    {% block main %}{% endblock %}
</main>
<footer class="text-center mt-1">
    {% block footer %}
        <p>&copy; Copyright {{ year + 1}}, developed by Hugo</p>
    {% endblock %}
</footer>
</body>
</html>