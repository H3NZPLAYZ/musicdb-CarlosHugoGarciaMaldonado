{% extends "base.twig" %}
{% block main %}
    {% if data is empty %}
        <div class="container mt-4">
            <div class="row text-center">
                <div class="col mb-3">
                    <h1> --- {{ userName }}'s Songs --- </h1>
                    <p class='mt-4'>There are no songs yet</p>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container mt-4">
            <div class="row text-center">
                <div class="col mb-3">
                    <h1> --- {{ userName }}'s Songs --- </h1>
                    {% for song in data %}
                        {{ song.songFormat() }}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}